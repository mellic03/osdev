#pragma once
#include <stdint.h>

static constexpr uint64_t ATEXIT_MAX_FUNCS = 128;

extern "C"
{
    using uarch_t = unsigned;

    struct atexit_func_entry_t
    {
        void (*destructor_func)(void*);
        void *obj_ptr;
        void *dso_handle;
    };

    int __cxa_atexit( void (*f)(void *), void *objptr, void *dso );
    void __cxa_finalize( void *f );
}